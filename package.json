{
  "name": "personal-finances",
  "version": "1.0.0",
  "description": "Personal Finances Application - Full Stack",
  "private": true,
  "type": "module",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "bun run --parallel dev:backend dev:frontend",
    "dev:backend": "cd backend && bun run dev",
    "dev:frontend": "cd frontend && bun run dev",
    "build": "bun run build:backend && bun run build:frontend",
    "build:backend": "cd backend && bun run build",
    "build:frontend": "cd frontend && bun run build",
    "lint": "bun run lint:backend && bun run lint:frontend",
    "lint:backend": "cd backend && bun run lint",
    "lint:frontend": "cd frontend && bun run lint",
    "format": "bun run format:backend && bun run format:frontend",
    "format:backend": "cd backend && bun run format",
    "format:frontend": "cd frontend && bun run format",
    "db:push": "cd backend && bun run db:push",
    "db:studio": "cd backend && bun run db:studio",
    "db:migrate": "cd backend && bun run db:migrate",
    "db:generate": "cd backend && bun run db:generate"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "typescript": "^5.7.2"
  }
}
