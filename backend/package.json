{
  "name": "personal-finances-backend",
  "version": "1.0.0",
  "description": "Backend for Personal Finances Application",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist",
    "start": "bun dist/index.js",
    "db:push": "bunx prisma db push --config prisma.config.ts",
    "db:studio": "bunx prisma studio --config prisma.config.ts",
    "db:migrate": "bunx prisma migrate dev --config prisma.config.ts",
    "db:generate": "bunx prisma generate --config prisma.config.ts",
    "lint": "biome lint --write src/",
    "format": "biome format --write src/"
  },
  "dependencies": {
    "@prisma/client": "^7.1.0",
    "@prisma/adapter-libsql": "^7.1.0",
    "elysia": "^1.4.17",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/cors": "^1.4.0",
    "bcryptjs": "^3.0.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^24.10.1",
    "bun-types": "^1.2.0",
    "dotenv": "^16.4.5",
    "prisma": "^7.1.0"
  }
}
